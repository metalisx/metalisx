								<id>internet-explorer</id>
								<goals>
									<goal>integration-test</goal>
								</goals>
								<phase>integration-test</phase>
								<configuration>
									<systemPropertyVariables>
										<arquillian.xml>arquillian-internet-explorer.xml</arquillian.xml>
									</systemPropertyVariables>
