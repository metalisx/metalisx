					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>internet-explorer</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
